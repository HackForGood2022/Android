<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/layoutmain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp">

            <!---SIGN IN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="0dp"
                android:text="Encuentra"
                android:textColor="@color/black"
                android:textSize="40sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:text="Encuentra tu trabajo ideal..."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="26dp">

                <EditText
                    android:id="@+id/barra_busqueda"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/barra_busqueda"
                    android:hint="Busca tu trabajo ideal"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/buscarPueblo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@null"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@raw/lupa_botoncillo" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="PUEBLOS"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="140dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="PERFILES"
                    android:paddingStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_edittext"
                    android:text="OFERTAS"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_height="38dp">

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="12dp"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="ORDENAR POR        "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@raw/abajo" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/barra_navegacion"
            android:layout_marginTop="-70dp"
            android:paddingTop="10dp"
            android:weightSum="5">
            <ImageButton
                android:id="@+id/home"
                android:layout_height="40dp"
                app:srcCompat="@raw/casa"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="fill"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/mapa"
                android:layout_height="40dp"
                app:srcCompat="@raw/mapa"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="fill"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/search"
                android:layout_height="40dp"
                app:srcCompat="@raw/lupa1"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="fill"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/chat"
                android:layout_height="40dp"
                app:srcCompat="@raw/chat"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="fill"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/profile"
                android:layout_height="40dp"
                app:srcCompat="@raw/perfil"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="fill"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>